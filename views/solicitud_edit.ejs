                                <input type="text" class="form-control" id="i_rfc" value="<%= solicitudes_edit.rfc %>"  name="cliente[rfc]" required>
                            </div>
                            <div class="col-md-4" id="div_curp">
                                <label for="i_curp">CURP</label>
