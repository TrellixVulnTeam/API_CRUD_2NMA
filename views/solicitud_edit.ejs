<script>
    $(function() {
        $('#form_solicitud').validate();
        $('#r_fisica').trigger('click');


        $('#r_fisica').click(function(){
            if($(this).is(':checked')) {  
                $('#div_fisica').css('display', '');
                $('#div_curp').css('display', '');
                $('#div_doc_fisicos').css('display', '');
                $('#div_moral').css('display', 'none');
                $('#div_doc_morales').css('display', 'none');
            }
        });

        $('#r_moral').click(function(){
            if($(this).is(':checked')) {  
                $('#div_fisica').css('display','none');
                $('#div_curp').css('display', 'none');
                $('#div_doc_fisicos').css('display', 'none');
                $('#div_moral').css('display', '');
                $('#div_doc_morales').css('display', '');
            }
        });

       
    });
</script>

