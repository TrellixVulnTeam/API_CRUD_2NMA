<%- include('./layout.ejs') %>
<body>
    <br>
    <div class="container">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-11">
                    <a href="/add_solicitud">
                        <button class="btn btn-primary">
                            <i class="fa-solid fa-plus"></i> &nbsp; Nueva Solicitud         
                        </button> 
                    </a>
                </div>
                
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            
                            <!-- <% solicitudes.forEach((solicitudes_edit)=> { %>
                                <div class="row" id="informacion"  style="display: none;">
                                    <div class="col-md-12">
                                        <a href="/solicitud_edit/<%=solicitudes_edit.id%>">
                                            <button class="btn btn-info">
                                                <i class='bx bx-edit-alt'></i>&nbsp; Editar
                                            </button> 
                                        <a href="/eliminar_editar/<%=solicitudes_edit.id%>">
                                            <button class="btn btn-danger">
                                                <i class='bx bx-trash'></i></i> &nbsp; Borar 
                                            </button> 
                                        </a>
                                    </div>
                                </div>
                            <%})%> -->
                            <div class="row justify-content-center">
                                <div class="col-md-12">
                                    <br>
                                    <table id="table_solicitudes" class="table table-sm w-100 table-bordered">
                                        <thead class="text-primary">
                                            <tr>
                                                <!-- <th scope="col" hidden >Id</th> -->
                                                <th scope="col">Tipo de cliente</th>
                                                <th scope="col">Nombre</th>
                                                <th scope="col">Apellido Paterno</th>
                                                <th scope="col">Apellido Materno</th>
                                                <th scope="col">Rfc</th>
                                                <th scope="col">Curp</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Celular</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <% if(solicitudes.length){ %>
                                            <tbody>
                                                <tr class="tr_informacion" alt="<%= solicitudes.id %>">
                                                    <% solicitudes.forEach((solicitudesPromise)=> { %>
                                                        <!-- <td name="id" hidden><%= solicitudesPromise.id %></td> -->
                                                        <td><%= solicitudesPromise.cliente %></td>
                                                        <td><%= solicitudesPromise.nombre %></td>
                                                        <td><%= solicitudesPromise.paterno %></td>
                                                        <td><%= solicitudesPromise.materno %></td>
                                                        <td><%= solicitudesPromise.rfc %></td>
                                                        <td><%= solicitudesPromise.curp %></td>
                                                        <td><%= solicitudesPromise.email %></td>
                                                        <td><%= solicitudesPromise.celular %></td>
                                                        <td>
                                                            <a href="/solicitud_edit/<%=solicitudesPromise.id%>">
                                                                <i class=' btn btn-info fa-solid fa-pen-to-square' style="color: whitesmoke;" title="Editar"></i>
                                                            </a>                                                             
                                                            <a onclick="confirmar('<%=solicitudesPromise.id%>')">
                                                                <i class=' btn btn-danger fa-solid fa-trash-can' title="Borrar"></i></i>  
                                                            </a>
                                                            <!-- <a href="/delete/<%=solicitudesPromise.id%>">
                                                                <i class=' btn btn-danger fa-solid fa-trash-can' title="Borrar" onclick="return confirm('¿Esta Seguro de eliminar la  Presolicitud?')"></i></i>  
                                                            </a> -->
                                                        </td>
                                                    </tr>
                                                    <%})%>
                                            </tbody>
                                        <% } else { %>
                                            <tbody>
                                                <center>
                                                    <td colspan="9"><label class="text-gray-500" class="center" style="align-content: center;">Sin Resultados</label></td>
                                                </center>
                                            </tbody>
                                        <% } %>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#table_solicitudes').DataTable();
        });
        function confirmar(id) {
            Swal.fire({
                title: '¿Esta seguro de eliminar la pre-solicitud de crédito?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Confirmar'
                }).then((result) => {
                if (result.isConfirmed){
                    window.location = '/delete/' + id;
                } else if (result.isDenied) {
                    Swal.fire('Error al eliminar la Pre-solicitud', '', 'error')
                }
            })
        }
    </script>
</body>

